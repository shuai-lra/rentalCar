<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shuai.sys.mapper.LogInfoMapper">

    <resultMap id="BaseResultMap" type="com.shuai.sys.domain.LogInfo">
        <!-- id的映射  -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <!-- 其他字段的映射  -->
        <result column="loginname" jdbcType="VARCHAR" property="loginname"/>
        <result column="loginip" jdbcType="VARCHAR" property="loginip"/>
        <result column="logintime" jdbcType="TIMESTAMP" property="logintime"/>
    </resultMap>

    <!--  sql片段  -->
    <sql id="Base_Column_List">
        id , loginname, loginip, logintime
    </sql>

    <select id="queryAllLogInfo" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from sys_log_login
        <where>
            <if test="loginname!=null and loginname!=''">
                and loginname like concat("%" ,#{loginname},"%")
            </if>
            <if test="loginip!=null and loginip!=''">
                and loginip like concat("%",#{loginip},"%")
            </if>
            <if test="startTime!=null">
                and logintime >= #{startTime}
            </if>
            <if test="endTime!=null">
                and logintime  <![CDATA[<=]]> #{endTime}
            </if>
        </where>
    </select>

    <delete id="deleteByPrimaryKey">
        delete from sys_log_login where id = #{id}
    </delete>
</mapper>